{
    "compilerOptions": {
        "target": "ES2018",
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {},
        "resolveJsonModule": true,
        "types": [],
        "strict": true,
        "declaration": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["./**/*.ts", "./**/*.d.ts"],
    "exclude": ["**/dist/*.ts", "**/dist/*.d.ts"]
}
